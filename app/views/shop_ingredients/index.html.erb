<p id="notice"><%= notice %></p>

<h1>Listing Shop Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Ingredients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_ingredients.each do |shop_ingredient| %>
      <tr>
        <td><%= shop_ingredient.shop %></td>
        <td><%= shop_ingredient.ingredients %></td>
        <td><%= link_to 'Show', shop_ingredient %></td>
        <td><%= link_to 'Edit', edit_shop_ingredient_path(shop_ingredient) %></td>
        <td><%= link_to 'Destroy', shop_ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

