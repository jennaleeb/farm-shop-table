<div class="container">
<h1>Ingredient</h1>
<p>
  <strong>Name:</strong>
  <%= @ingredient.name %>
</p>


<p>
  <strong>Ingredient Type:</strong>
  <%= @ingredient.ingredient_type.name %>
</p>

<p>
  <strong>Availability:</strong>
  <% @ingredient.months.each do |month| %>
  	<%= month.name %>
  <% end %>
</p>

<div class="post-clear">
<%= link_to 'Edit', edit_ingredient_path(@ingredient), class: 'btn btn-default' %> 
<%= link_to 'Back', ingredients_path, class: 'btn btn-default' %>
</div>

</div>