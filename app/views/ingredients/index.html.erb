<p id="notice"><%= notice %></p>

<h1>Listing Ingredients</h1>

<div class="container-fluid">
  <div class="row">
    
    <%= form_tag ingredients_path, method: :get do %>
      <div>
        <%= select :ingredient, :ingr_type, Ingredient::INGREDIENT_TYPES, {include_blank: "All"}, class: "form-control"%>
      </div>
      <div>
        <%= submit_tag 'Find Ingredients', class: "btn btn-default" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Quantity unit</th>
      <th>Ingredient Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.quantity %></td>
        <td><%= ingredient.quantity_unit %></td>
        <td><%= ingredient.ingredient_type.name %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path, { class: 'btn btn-default' } %>
