<div class="container">
<h1>Ingredients</h1>
</div>

<div class="container">    
    <%= form_tag ingredients_path, method: :get do %>
        <div class="col-md-3">

        <%= select :ingredient, :ingr_type, Ingredient::INGREDIENT_TYPES, {include_blank: "All"}, class: "form-control form-control-inline"%>
    </div>
    <div class="col-md-3">
        <%= submit_tag 'Find Ingredients', class: "btn btn-default" %>
    </div>
    <% end %>
</div>

<div class="container">

    <% @ingredients.each do |ingredient| %>
      <div class="row well">
        <div class="col-md-8 col-sm-12">
        <p><%= ingredient.name %></p>
        <p>Ingredient Type: <%= ingredient.ingredient_type.name %></p>
        <%= render 'view_ingredient', ingredient: ingredient %>
        <%= render 'change_ingredient', ingredient: ingredient %>
        </div>
      </div>
    <% end %>
    
<%= link_to 'New Ingredient', new_ingredient_path, { class: 'btn btn-primary' } %>

</div>

