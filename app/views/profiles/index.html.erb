<div class="container">
<h1>User Profile</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>City</th>
      <th>Postal code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if current_user.has_profile? then %>
      <%= render 'profile', profile: current_user.profile %>
    <% end %>
  </tbody>
</table>

<br>

<% if !current_user.has_profile? then %>
  <%= link_to 'New Profile', new_profile_path %>
<% end %>

</div>