<div class="container">
    <% if current_user.has_profile? then %>
    <div class="row">
      <div class="col-md-8">
        <%= render 'profile', profile: current_user.profile %>
        <%= render 'change_profile', profile: current_user.profile %>
      </div>
    </div>
    <% end %>

<% if !current_user.has_profile? then %>
  <%= link_to 'New Profile', new_profile_path, class: "btn btn-default" %>
<% end %>

</div>