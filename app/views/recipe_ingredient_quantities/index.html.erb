<div class="container">
<h1>Listing Recipe Ingredient Quantities</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Ingredient</th>
      <th>Quantity</th>
      <th>Quantity unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_ingredient_quantities.each do |recipe_ingredient_quantity| %>
      <tr>
        <td><%= recipe_ingredient_quantity.recipe.name %></td>
        <td><%= recipe_ingredient_quantity.ingredient.name %></td>
        <td><%= recipe_ingredient_quantity.quantity %></td>
        <td><%= recipe_ingredient_quantity.quantity_unit %></td>
        <%= render 'view_recipe_ingredient_quantity', recipe_ingredient_quantity: recipe_ingredient_quantity %>
        <%= render 'change_recipe_ingredient_quantity', recipe_ingredient_quantity: recipe_ingredient_quantity %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe ingredient quantity', new_recipe_ingredient_quantity_path %>
</div>