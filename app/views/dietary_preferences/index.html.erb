<div class="container">
<h1>Dietary Preferences for <%= current_user.email %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Diet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dietary_preferences.each do |dietary_preference| %>
      <tr>
        <td><%= dietary_preference.diet.name %></td>
        <%= render 'view_dietary_preference', dietary_preference: dietary_preference %>
        <%= render 'change_dietary_preference', dietary_preference: dietary_preference %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if !@dietary_preferences.present? then %>
<%= link_to 'New Dietary preference', new_dietary_preference_path %>
<% end %>
</div>