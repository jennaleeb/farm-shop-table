<p id="notice"><%= notice %></p>

<h1>Listing User Favourite Shops</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_favourite_shops.each do |user_favourite_shop| %>
      <tr>
        <td><%= user_favourite_shop.user.email %></td>
        <td><%= user_favourite_shop.shop.name %></td>
        <td><%= link_to 'View', user_favourite_shop %></td>
        <td><%= link_to 'Change', edit_user_favourite_shop_path(user_favourite_shop) %></td>
        <td><%= link_to 'Delete', user_favourite_shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
