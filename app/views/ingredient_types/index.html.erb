<p id="notice"><%= notice %></p>

<h1>Listing Ingredient Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_types.each do |ingredient_type| %>
      <tr>
        <td><%= ingredient_type.name %></td>
        <%= render 'view_ingredient_type', ingredient_type: ingredient_type %>
        <%= render 'change_ingredient_type', ingredient_type: ingredient_type %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient type', new_ingredient_type_path, { class: 'btn btn-default' } %>
