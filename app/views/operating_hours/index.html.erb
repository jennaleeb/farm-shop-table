<p id="notice"><%= notice %></p>

<h1>Listing Operating Hours</h1>

<table>
  <thead>
    <tr>
      <th>Day of week</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Is weekend hours</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operating_hours.each do |operating_hour| %>
      <tr>
        <td><%= operating_hour.day_of_week %></td>
        <td><%= operating_hour.start_time %></td>
        <td><%= operating_hour.end_time %></td>
        <td><%= operating_hour.is_weekend_hours %></td>
        <td><%= operating_hour.shop %></td>
        <td><%= link_to 'Show', operating_hour %></td>
        <td><%= link_to 'Edit', edit_operating_hour_path(operating_hour) %></td>
        <td><%= link_to 'Destroy', operating_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

