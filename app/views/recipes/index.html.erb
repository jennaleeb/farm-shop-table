<p id="notice"><%= notice %></p>



<div class="container-fluid">
  <h1>Recipes</h1>

  <%= form_tag 'recipes', method: :get do %>
    <div class="col-md-3">

      <%= select :recipe, :prep_time, Recipe::PREP_TIMES, {include_blank: "Prep Time"}, class: "form-control"%>
    </div>

    <div class="col-md-3">
      <%= select :recipe, :meal_type, Recipe::MEAL_TYPES, {include_blank: "Meal Type"}, class: "form-control"%>
    </div>
    <%= submit_tag 'Search' , class: "btn btn-default" %>
  <% end %>



  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Directions</th>
        <th>Prep time</th>
        <th>Meal type</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.name %></td>
          <td><%= recipe.instructions %></td>
          <td><%= recipe.prep_time %> min</td>
          <td><%= recipe.meal_type %></td>
          <td><%= link_to 'Show', recipe %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Recipe', new_recipe_path %>
</div>


