<div class="container">
<h1>Listing Diets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diets.each do |diet| %>
      <tr>
        <td><%= diet.name %></td>
        <%= render 'view_diet', diet: diet %>
        <% if current_user.admin_user? then %>
          <%= render 'change_diet', diet: diet %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin_user? then %>
  <%= link_to 'New Diet', new_diet_path %>
<% end %>
</div>