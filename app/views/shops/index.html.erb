<div class="container">
<h1>Listing Shops</h1>

<table class="table">
  <thead>
    <tr>
      <th>Shop Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= link_to 'View', shop %></td>
        <td><%= link_to 'Change', edit_shop_path(shop) %></td>
        <td><%= link_to 'Delete', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? and current_user.can_modify_shops? then %>
  <%= link_to 'New Shop', new_shop_path %>
<% end %>
</div>