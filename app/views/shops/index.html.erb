<div class="container">
<h1>Listing Shops</h1>

<table class="table">
  <thead>
    <tr>
      <th>Shop Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <% if user_signed_in? then %>
          <%= render 'actions_for_shop', shop: shop %>
        <% end %> 
        <%= render 'view_shop', shop: shop %>
        <% if user_signed_in? and current_user.can_modify_shops? then %>
          <%= render 'change_shop', shop: shop %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? and current_user.can_modify_shops? then %>
  <%= link_to 'New Shop', new_shop_path %>
<% end %>
</div>