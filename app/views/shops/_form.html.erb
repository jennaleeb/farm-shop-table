<%= form_for @shop, :html => {:class => "form-horizontal", :role => 'form'} do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% @shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-container col-sm-10">
    <h3>Name</h3>
    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :name %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    
    <h3>Address</h3>
    <!-- Forms for address -->
    <%= f.fields_for :address, @shop.address do |address| %>
      <div class="form-group">
        <div class="col-sm-3">
          <%= address.label :address_line1 %>
        </div>
        <div class="col-sm-6">
          <%= address.text_field :address_line1, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= address.label :address_line2 %>
        </div>
        <div class="col-sm-6">
          <%= address.text_field :address_line2, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= address.label :city %>
        </div>
        <div class="col-sm-6">
          <%= address.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= address.label :province %>
        </div> 
        <div class="col-sm-6">
          <%= address.text_field :province, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= address.label :country %>
        </div>
        <div class="col-sm-6">
          <%= address.text_field :country, class: 'form-control' %>
        </div>
        
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= address.label :postal_code %>
        </div>
        <div class="col-sm-6">
          <%= address.text_field :postal_code, class: 'form-control' %>
        </div>
      </div>
    <% end %>

    <h3>Contact Info</h3>
    <%= f.fields_for :contact_info, @shop.contact_info do |contact_info| %>
      <div class="form-group">
        <div class="col-sm-3">
          <%= contact_info.label :telephone_number %>
        </div>
        <div class="col-sm-6">
          <%= contact_info.text_field :telephone_number, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= contact_info.label :fax_number %>
        </div>
        <div class="col-sm-6">
          <%= contact_info.text_field :fax_number, class: 'form-control' %>
        </div>
      </div>
    <% end %>
    <h3>Web Info</h3>
    <!-- forms for web info -->
    <%= f.fields_for :web_info, @shop.web_info do |web_info| %>
      <div class="form-group">
        <div class="col-sm-3">
          <%= web_info.label :email %>
        </div>
        <div class="col-sm-6">
          <%= web_info.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= web_info.label :website %>
        </div>
        <div class="col-sm-6">
          <%= web_info.text_field :website, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= web_info.label :facebook %>
        </div>
        <div class="col-sm-6">
          <%= web_info.text_field :facebook, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3">
          <%= web_info.label :twitter %>
        </div>
        <div class="col-sm-6">
          <%= web_info.text_field :twitter, class: 'form-control' %>
        </div>
      </div>
   <% end %>

    <div class="form-group actions">
      <%= f.submit 'Set Shop Information', class: 'btn btn-primary'  %>
    </div>
  </div>
<% end %>
